<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road"
    tools:context=".question1">

    <!-- Questions -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/question1"
                android:textColor="#000000"
                android:textSize="25sp" />

            <!-- RadioButton -->

            <RadioGroup
                android:id="@+id/radiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <RadioButton
                    android:id="@+id/rd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background"
                    android:onClick="onClickAnswer"
                    android:text="Through left side of the Vehicle."
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background"
                    android:onClick="onClickAnswer"
                    android:text="Through Right side of the Vehicle."
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rd3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background"
                    android:onClick="onClickAnswer"
                    android:text="Through left of the Vehicle if the road is wide."
                    android:textSize="20sp" />
            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Correct And Incorrect Images-->

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="141dp"
        android:layout_below="@id/cardview"
        android:layout_margin="4dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/correct_answer"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="201dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/correct2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/incorrect_answer"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="201dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/wrong3"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- Floating action button -->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="nextPage"
        android:src="@drawable/next"
        app:fabSize="normal" />

</RelativeLayout>